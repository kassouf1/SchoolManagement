@model SchoolManagement.Models.Student

@{
    ViewData["Title"] = "Edit Student";
}

<h2>Edit Student</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>School</label>
        <select asp-for="SchoolId" class="form-control" asp-items="ViewBag.SchoolId"></select>
    </div>

    <div class="form-group">
        <label>Class</label>
        <select asp-for="SchoolClassId" class="form-control" asp-items="ViewBag.SchoolClassId"></select>
    </div>

    <div class="form-group">
        <label>Subjects</label>
        <select asp-for="SelectedSubjectIds" class="form-control" asp-items="ViewBag.SubjectIds" multiple="multiple"></select>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>
