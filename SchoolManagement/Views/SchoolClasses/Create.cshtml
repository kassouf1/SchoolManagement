@model SchoolManagement.Models.SchoolClass

@{
    ViewData["Title"] = "Create Class";
}

<h1>Create Class</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SchoolId">School</label>
        <select asp-for="SchoolId" class="form-control" asp-items="ViewBag.SchoolId">
            <option value="">-- Select School --</option>
        </select>
        <span asp-validation-for="SchoolId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
